# 📋 Configuration Template
configuration_template:
  ollama_config: |
    ollama:
      base_url: "http://localhost:11434"
      model: "qwen3:8b"  # Recommended for business analysis
      temperature: 0.3   # Lower temperature for more consistent analysis
      max_tokens: 4096   # Longer responses for detailed analysis
      timeout: 120       # Extended timeout for complex analysis
      system: "You are a business analysis expert. Provide structured, hypothesis-driven insights."
    
    vector_db:
      type: "chromadb"
      persist_directory: "./data/vectordb"
      collection_name: "dream_business_knowledge"
    
    embedding:
      model: "sentence-transformers/all-MiniLM-L6-v2"
      chunk_size: 1500   # Larger chunks for business documents
      chunk_overlap: 300 # More overlap for context preservation
    
    api:
      host: "0.0.0.0"
      port: 8000
      debug: true
    
    business_analysis:
      default_currency: "CNY"
      analysis_depth: "comprehensive"  # basic, standard, comprehensive
      include_benchmarks: true
      generate_visualizations: true

# 🚀 Quick Start Instructions
post_generation_instructions: |
  ✅ Step 1: Environment Setup
     - Install Ollama: https://ollama.ai/
     - Pull recommended model: `ollama pull qwen3:8b`
     - Verify model: `ollama list`
  
  ✅ Step 2: Project Setup
     - Create project directory: `mkdir dream-business-analysis-ai && cd dream-business-analysis-ai`
     - Install dependencies: `python install_dependencies.py`
     - Or manually: `pip install -r requirements.txt`
  
  ✅ Step 3: Knowledge Base Setup
     - Add business frameworks to `/data/frameworks/`
     - Include case studies in `/data/case_studies/`
     - Add industry benchmarks to `/data/benchmarks/`
     - Customize business analyst personality in `/config/business_analyst_prompt.txt`
  
  ✅ Step 4: Initialize System
     - Build business knowledge vector database: `python rebuild_vectordb.py`
     - Test system with sample business case: `python test_system.py`
     - Start application: `python start.py`
  
  ✅ Step 5: Business Analysis Usage
     - Access web interface: http://localhost:8000
     - View API docs: http://localhost:8000/docs
     - Run example analysis: `python example_analysis.py`
     - Test DREAM analysis: `curl -X POST "http://localhost:8000/api/v1/analyze" -H "Content-Type: application/json" -d '{"business_case": "Your business description", "framework": "DREAM"}'`

